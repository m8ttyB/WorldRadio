# Global Radio - Deployment Environment Variables
# Copy this file to .env and update with your values

# Render.com Configuration
RENDER_API_KEY=rnd_your_render_api_key_here

# Application Configuration
APP_NAME=global-radio
ENVIRONMENT=production
BACKEND_SERVICE_NAME=global-radio-api
FRONTEND_SERVICE_NAME=global-radio-web

# GitHub Configuration
GITHUB_REPO_URL=https://github.com/yourusername/global-radio
GITHUB_BRANCH=main

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/global_radio
DB_NAME=global_radio

# Service Configuration
BACKEND_PLAN=starter
BACKEND_REGION=oregon
BACKEND_INSTANCES=1

# Custom Domains (optional)
FRONTEND_DOMAIN=
BACKEND_DOMAIN=

# Monitoring
NOTIFICATION_EMAIL=admin@yourdomain.com
ENABLE_MONITORING=true

# Auto-scaling (requires paid plan)
ENABLE_AUTOSCALING=false
MIN_INSTANCES=1
MAX_INSTANCES=3

# Build Configuration
BACKEND_BUILD_COMMAND=pip install -r requirements.txt
BACKEND_START_COMMAND=uvicorn server:app --host 0.0.0.0 --port $PORT
FRONTEND_BUILD_COMMAND=cd frontend && yarn install && yarn build
FRONTEND_PUBLISH_PATH=frontend/build

# Health Check
HEALTH_CHECK_PATH=/api/
HEALTH_CHECK_INTERVAL=30

# Optional: Additional Environment Variables
# API_KEY=your-optional-api-key
# FEATURE_FLAGS=enabled
# ANALYTICS_ID=GA-XXXXXXXXX